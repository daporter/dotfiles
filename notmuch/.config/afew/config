[MailMover]
folders = gmail/INBOX

# If using mbsync, this must be True.
rename = True

gmail/INBOX =
    'tag:deleted':'gmail/[Gmail]/Bin'
    'tag:draft':'gmail/[Gmail]/Drafts'
    'tag:sent':'gmail/[Gmail]/Sent Mail'
    'tag:spam':'gmail/[Gmail]/Spam'
    'tag:flagged':'gmail/[Gmail]/Starred'

# Add tag “spam” to all messages tha have the header “X-Spam-Flag”.
[SpamFilter]

# Tag all messages by me as “sent”.
[SentMailsFilter]
sent_tag = sent

# Remove the “new” tag from all messages from me so they won’t have the
# “inbox” tag added by the InboxFilter.
[ArchiveSentMailsFilter]

# For messages in certain folders, tag them according to the folder name
[FolderNameFilter]
folder_explicit_list =
    gmail/[Gmail]/Bin
    gmail/[Gmail]/Drafts
    "gmail/[Gmail]/Sent Mail"
    gmail/[Gmail]/Spam
    gmail/[Gmail]/Starred
    gmail/emacs-humanities
    gmail/emacs-paris
    gmail/great-conversation
folder_transforms =
    gmail/[Gmail]/Bin:deleted
    gmail/[Gmail]/Drafts:draft
    "gmail/[Gmail]/Sent Mail":sent
    gmail/[Gmail]/Spam:spam
    gmail/[Gmail]/Starred:flagged
    gmail/emacs-humanities:emacs-humanities
    gmail/emacs-paris:emacs-paris
    gmail/great-conversation:great-conversation

# Remove the “new” tag and add the “inbox” tag to any message that isn’t
# spam.
[InboxFilter]
