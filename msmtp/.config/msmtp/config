defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
tls_starttls off
syslog on

account gmail
host smtp.gmail.com
port 465
protocol smtp
from david@daporter.net
user david.a.porter@gmail.com
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/Mail/gmail.gpg"

account default : gmail
aliases /etc/aliases
