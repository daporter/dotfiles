#!/bin/sh

BREW=/usr/local/bin/brew

echo "*** Updating Homebrew..."
${BREW} update
echo
echo "*** Outdated Homebrew packages:"
${BREW} outdated
echo
echo "*** Upgrading Homebrew packages..."
${BREW} upgrade
echo
echo "*** Outdated Cask packages:"
${BREW} cask outdated
echo
echo "*** Upgrading Cask packages..."
${BREW} cask upgrade
echo
echo "*** Cleaning up Homebrew and Cask packages..."
${BREW} cleanup
${BREW} cask cleanup
