#!/bin/sh
#
# Run the sequence of linters I prefer for my text files.

if [ $# -ne 1 ]; then
	PROGNAME=$(basename "$0")
	printf 'Usage %s <file>\n' "$PROGNAME"
	exit 1
fi

file="$1"

_check() {
	command -v "$1" >/dev/null
}

_check proselint && proselint "$file"
_check writegood && writegood --parse "$file"
