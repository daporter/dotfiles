## increase region size
alt - left : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
alt - down : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
alt - up : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north # 0x37 = .
alt - right : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

## decrease region size
shift + alt - left : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
shift + alt - down : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
shift + alt - up : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north # 0x337 = .
shift + alt - right : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east

