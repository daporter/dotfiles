control + super + alt + shift + Escape
    pkill -USR1 -x sxhkd && notify-send -i key_bindings "Reloaded key bindings"

# Easily open a new browser window on current workspace.
super + b
    firefox --new-window

{XF86AudioLowerVolume, XF86AudioRaiseVolume}
    pamixer {--decrease, --increase} 10 && \
    kill -34 "$(cat ~/.cache/sbar.pid)"

XF86AudioMute
    pamixer --toggle-mute && \
    kill -34 "$(cat ~/.cache/sbar.pid)"

{XF86MonBrightnessDown, XF86MonBrightnessUp}
    xbacklight {-dec, -inc} 10

# If ~ is added at the beginning of the keysym, the captured event
# will be replayed for the other clients.
#
# If @ is added at the beginning of the keysym, the command will be
# run on key release events, otherwise on key press events.
~@Caps_Lock
    kill -SIGRTMIN "$(cat /tmp/mtstatus.pid)"

# Dynamic menus

control + super + alt + shift + d ; k
    ~/bin/dmenu_pkill

control + super + alt + shift + d ; w
    ~/bin/dmenu_wifi

control + super + alt + shift + d ; s
    ~/bin/dmenu_shutdown
