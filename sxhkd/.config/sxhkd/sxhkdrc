control + super + alt + shift + Escape
    pkill -USR1 -x sxhkd && notify-send -i key_bindings "Reloaded key bindings"

XF86AudioRaiseVolume
    pamixer --increase 10
XF86AudioLowerVolume
    pamixer --decrease 10

control + super + alt + shift + {Left, Right}
    xbacklight {-dec, -inc} 10

# Dynamic menus

control + super + alt + shift + d ; k
    ~/bin/dmenu_pkill

control + super + alt + shift + d ; w
    ~/bin/dmenu_wifi

control + super + alt + shift + d ; s
    ~/bin/dmenu_shutdown

# Web searches

control + super + alt + shift + s ; {g, w, m, o, l, r}
     ~/bin/websearch { \
                     --google, \
                     --wikipedia, \
                     --googlemaps, \
                     --oxford, \
                     --onelook, \
                     --wordreference \
                     }

control + super + alt + shift + p ; {g, w, m, o, l, r}
     ~/bin/websearch -p { \
                        --google, \
                        --wikipedia, \
                        --googlemaps, \
                        --oxford, \
                        --onelook, \
                        --wordreference \
                        } 
