<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Label</key>
        <string>david.brew-update</string>
        <key>ProgramArguments</key>
        <array>
            <string>sh</string>
            <string>-c</string>
            <string>"${HOME}/bin/brew-update"</string>
        </array>
        <key>StartCalendarInterval</key>
        <dict>
            <key>Minute</key>
            <integer>20</integer>
            <key>Hour</key>
            <integer>10</integer>
            <key>WeekDay</key>
            <integer>1</integer>
        </dict>
        <key>StandardOutPath</key>
        <string>/var/log/brew-update.log</string>
        <key>StandardErrorPath</key>
        <string>/var/log/brew-update.log</string>
    </dict>
</plist>
