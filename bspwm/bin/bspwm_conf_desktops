#!/bin/sh

if [ "$(bspc query -M | wc -l)" -eq 2 ]; then
	# Arrange the monitors so the external is to the left of the laptop.
	bspc monitor DP-1   -d I II III IV
	bspc monitor LVDS-1 -d V
	bspc wm -O DP-1 LVDS-1
	
	# Make sure borders are always on, otherwise it is impossible to
	# find the focused window on two monitors with monoclesâ€¦
	bspc config borderless_monocle false
else
	bspc monitor -d I II III IV
fi
