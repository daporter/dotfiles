#!/bin/sh

bspwm_conf_desktops

bspc config border_width          2
bspc config window_gap            2
bspc config split_ratio           0.5
bspc config focus_follows_pointer true

bspc rule --add Emacs              desktop='^1' state=tiled    follow=on
bspc rule --add Firefox            desktop='^2' state=tiled    follow=on
bspc rule --add XTerm:xterm:Backup              state=floating center=on

bspwm_conf_colors

polybar_start
