#!/bin/sh
#
# Run a backup of my home directory.

. "$HOME/.profile.d/restic.sh"

echo "Connecting to network Phunculist"
if ! nmcli connection up Phunculist; then
	echo "Unable to connect." >&2
	exit 1
fi
echo
echo "Running restic"
restic --password-command="pass restic" \
       --exclude-file="$HOME/.config/restic/restic-exclude.txt" \
       --verbose \
       backup "$HOME"
